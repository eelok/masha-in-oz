---
layout: layouts/base.njk
permalink: /ru/
lang: ru
title: "Главная"
---

<div class="home-page">
    <h1>{{ site.title.ru }}</h1>
    <p>{{ site.description.ru }}</p>
    
    <section class="recent-posts">
        <h2>Последние посты</h2>
        <ul class="posts-list">
            {% for post in collections.posts_ru | limit(5) %}
                <li class="post-item">
                    <h3><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
                    <div class="post-meta">
                        <time datetime="{{ post.date | htmlDateString }}">
                            {{ post.date | localizedDate(lang) }}
                        </time>
                        {% if post.data.tags %}
                        <div class="post-tags">
                            {% for tag in post.data.tags %}
                                <span class="tag">{{ tag }}</span>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                    {% if post.data.description %}
                        <p class="post-excerpt">{{ post.data.description }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </section>
</div>