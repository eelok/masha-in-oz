<header class="site-header">
    <div class="header-container">
        <div class="site-brand">
            <a href="/{{ lang }}/" class="site-title">
                {{ site.title[lang] or site.title.en }}
            </a>
        </div>
        
        <!-- Burger Menu Button -->
        <button class="burger-menu" 
                aria-expanded="false" 
                aria-controls="main-navigation"
                aria-label="{% if lang == 'ru' %}Открыть меню{% elif lang == 'de' %}Menü öffnen{% else %}Open menu{% endif %}">
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
        </button>
        
        <!-- Navigation Menu -->
        <nav class="main-nav" id="main-navigation">
            <ul class="nav-list">
                {% for item in site.navigation[lang] %}
                    <li class="nav-item">
                        <a href="{{ item.url }}" 
                           class="nav-link {% if page.url == item.url %}active{% endif %}">
                            {{ item.text }}
                        </a>
                    </li>
                {% endfor %}
                
                <!-- Language Selector in Mobile Menu -->
                <li class="nav-item nav-languages">
                    <span class="nav-section-title">
                        {% if lang == 'ru' %}Язык{% elif lang == 'de' %}Sprache{% else %}Language{% endif %}
                    </span>
                    <div class="nav-language-list">
                        {% for langCode, langData in site.languages %}
                            <a href="/{{ langCode }}/" 
                               class="nav-lang-link {% if lang == langCode %}active{% endif %}"
                               title="{{ langData.name }}"
                               data-language="{{ langCode }}">
                                {{ langData.flag }} {{ langData.name }}
                            </a>
                        {% endfor %}
                    </div>
                </li>
            </ul>
        </nav>
        
        <!-- Desktop Language Selector -->
        <div class="language-selector desktop-only">
            {% for langCode, langData in site.languages %}
                <a href="/{{ langCode }}/" 
                   class="lang-switch {% if lang == langCode %}active{% endif %}"
                   title="{{ langData.name }}"
                   data-language="{{ langCode }}">
                    {{ langData.flag }}
                </a>
            {% endfor %}
        </div>
    </div>
</header>